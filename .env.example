# Data mode — "mock" uses static fixture data, "live" scrapes real airline sites
DATA_MODE=mock

# Browserbase — cloud browser for web scraping
# Sign up at https://browserbase.com to get these values
BROWSERBASE_API_KEY=
BROWSERBASE_PROJECT_ID=

# China Airlines scraper — optional, auto-created on first run
# After the first run, the script logs the created context ID.
# Set it here to reuse the same context (preserves cookies/session state).
CHINA_AIRLINES_CONTEXT_ID=

# Dynasty Flyer award search — optional, created by dynasty-flyer-login tool
# After logging in, the tool logs the context ID. Set it here to persist auth cookies.
DYNASTY_FLYER_CONTEXT_ID=

# Dynasty Flyer session — set by test-login.ts after successful login
# The search reconnects to this live Browserbase session (keepAlive, up to 1 hour)
DYNASTY_FLYER_SESSION_ID=

# Firecrawl — web scraping API for PointsBazaar marketplace
# Sign up at https://firecrawl.dev to get an API key
FIRECRAWL_API_KEY=
